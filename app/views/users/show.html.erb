<h1>Mon profil</h1>
<br/>
<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="http://www.aovc.org/wp-content/uploads/2015/10/photo-%C3%A0-venir-400x369.jpg" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title"><%= @user.first_name %> <%= @user.last_name %></h5>
        <p class="card-text"><%= @user.email %></p>
        <p class="card-text">Description : "<%= @user.description %>"</p>
        <p class="card-text">Membre depuis le <%= @user.created_at.strftime("%d/%m/%Y") %></p>
        <p><a href="<%= edit_user_registration_path %>">Modifier mes identifiants</a></p>
    </div>
</div>
<br/>
<% @user_events.each do |event| %>
<p>
    <strong><a href="<%= event_path(event.id) %>"><%= event.title %></a></strong>
</p>
<% end %>